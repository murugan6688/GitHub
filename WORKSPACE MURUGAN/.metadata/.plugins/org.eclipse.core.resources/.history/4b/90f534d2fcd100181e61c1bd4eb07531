import org.apache.http.impl.client.CloseableHttpClient;
import org.apache.http.impl.client.HttpClients;
import org.apache.http.util.EntityUtils;
import org.apache.http.client.HttpClient;
import org.apache.http.client.methods.HttpGet;

import org.apache.http.client.methods.CloseableHttpResponse;

public class restapi {

	//GET Method
	
	public void get(String Url) {
		
		// Create client connection using createDefault () and it in turn returns closeablehttpclient object 
		
		CloseableHttpClient httpclient = HttpClients.createDefault();
		// to get method
		
		
		HttpGet httpgetobject = new HttpGet(url); //like Entering the URL ...http get request object
		
		httpclient.execute(httpgetobject); // clicking "send" button and hit the URL
		
		
		CloseableHttpResponse responseobject = httpclient.execute(httpgetobject); // response after hitting the URL
		
		 int responsecode = responseobject.getStatusLine().getStatusCode(); // get the status response post execution and storing in 'responsecode' variable
		 
		 System.out.println(responsecode);
		 
	// how to get the response details and the format we need and store in string variable
		 
String responseString = EntityUtils.toString(responseobject.getEntity(),"UTF-8");
		 
// convert string response into Jason format

JSONObject jsonobject = new JSONObject

	
	}
}
